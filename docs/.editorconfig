# EditorConfig for markdown documentation
# Ensures consistent formatting across editors

root = true

[*.md]
# Use spaces for indentation
indent_style = space
indent_size = 2

# End files with a newline
insert_final_newline = true

# Remove trailing whitespace
trim_trailing_whitespace = true

# Use UTF-8 encoding
charset = utf-8

# Line length (soft limit for readability)
max_line_length = 100

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
